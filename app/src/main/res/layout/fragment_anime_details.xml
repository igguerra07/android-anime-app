<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/animeDetailsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/background_app"
    android:elevation="0dp">

    <ImageView
        android:id="@+id/animeDetailsBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc_vector_test" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/animesDetailsGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/animeDetailsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="99dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/animeDetailsScoreBadge"
        app:layout_constraintStart_toEndOf="@+id/animeDetailsPosterContent"
        app:layout_constraintTop_toTopOf="@+id/animeDetailsPosterContent" />

    <TextView
        android:id="@+id/animeDetailsDesc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="99dp"
        android:ellipsize="end"
        android:focusable="true"
        android:scrollbars="vertical"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/animeDetailsCardButton"
        app:layout_constraintEnd_toEndOf="@+id/animeDetailsScoreBadge"
        app:layout_constraintStart_toStartOf="@+id/animeDetailsPosterContent"
        app:layout_constraintTop_toBottomOf="@+id/animeDetailsPosterContent" />


    <TextView
        android:id="@+id/animeDetailsEpisodes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:elevation="99dp"
        app:layout_constraintEnd_toStartOf="@+id/animeDetailsFans"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/animeDetailsTitle"
        app:layout_constraintTop_toBottomOf="@+id/animeDetailsTitle" />

    <TextView
        android:id="@+id/animeDetailsFans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:elevation="99dp"
        app:layout_constraintEnd_toStartOf="@+id/animeDetailsScoreBadge"
        app:layout_constraintStart_toEndOf="@+id/animeDetailsEpisodes"
        app:layout_constraintTop_toTopOf="@+id/animeDetailsEpisodes" />

    <TextView
        android:id="@+id/animeDetailsScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="99dp"
        android:text="Score"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/animeDetailsScoreBadge"
        app:layout_constraintStart_toStartOf="@+id/animeDetailsScoreBadge"
        app:layout_constraintTop_toBottomOf="@+id/animeDetailsScoreBadge" />

    <androidx.cardview.widget.CardView
        android:id="@+id/animeDetailsCardContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:elevation="1dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="24dp"
        app:cardMaxElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/animesDetailsGuideline"
        app:layout_constraintVertical_bias="1.0">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/animeBackgroundContent"
        android:layout_width="335dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:elevation="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="25dp"
        app:cardMaxElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="@+id/animeDetailsCardContent"
        app:layout_constraintStart_toStartOf="@+id/animeDetailsCardContent"
        app:layout_constraintTop_toBottomOf="@+id/animeDetailsBackButton"
        app:layout_constraintVertical_bias="0.0">

        <WebView
            android:id="@+id/animeTrailerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/animeDetailsPosterContent"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:elevation="99dp"
        app:cardElevation="25dp"
        app:cardMaxElevation="16dp"
        app:layout_constraintStart_toStartOf="@+id/animeBackgroundContent"
        app:layout_constraintTop_toBottomOf="@+id/animeBackgroundContent">

        <ImageView
            android:id="@+id/animeDetailsPoster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="99dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_launcher_background" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/animeDetailsCardButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="16dp"
        app:cardElevation="25dp"
        app:cardMaxElevation="16dp"
        app:cardUseCompatPadding="false"
        app:contentPaddingBottom="8dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingRight="16dp"
        app:contentPaddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/animeDetailsCardContent"
        app:layout_constraintEnd_toEndOf="@+id/animeDetailsCardContent"
        app:layout_constraintStart_toStartOf="@+id/animeDetailsCardContent">

        <TextView
            android:id="@+id/animeDetailsTextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Adicionar Favoritos"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/animeDetailsScoreBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp"
        app:cardElevation="25dp"
        app:cardMaxElevation="16dp"
        app:contentPadding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/animeBackgroundContent"
        app:layout_constraintTop_toTopOf="@+id/animeDetailsPosterContent">

        <TextView
            android:id="@+id/animeDetailsScoreValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="99dp"
        app:layout_constraintBottom_toTopOf="@+id/animeDetailsFans"
        app:layout_constraintEnd_toEndOf="@+id/animeDetailsTitle"
        app:layout_constraintStart_toStartOf="@+id/animeDetailsTitle"
        app:layout_constraintTop_toTopOf="@+id/animeDetailsTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:elevation="99dp"
        app:layout_constraintBottom_toBottomOf="@+id/animeDetailsEpisodes"
        app:layout_constraintEnd_toStartOf="@+id/animeDetailsScoreBadge"
        app:layout_constraintStart_toStartOf="@+id/animeDetailsEpisodes"
        app:layout_constraintTop_toTopOf="@+id/animeDetailsEpisodes"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/colorPrimary" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLoadingCotent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="99dp"
        app:layout_constraintBottom_toBottomOf="@+id/animeDetailsDesc"
        app:layout_constraintEnd_toEndOf="@+id/animeDetailsDesc"
        app:layout_constraintStart_toStartOf="@+id/animeDetailsDesc"
        app:layout_constraintTop_toTopOf="@+id/animeDetailsDesc"
        app:shimmer_auto_start="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimary" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>